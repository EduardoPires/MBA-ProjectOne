@model ComentarioModel

<div class="container bg-light border border-1 w-50 h-50">
    <h2>Editar Comentário</h2>

    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="PostagemId" />

        <div class="form-group">
            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Conteudo">Conteúdo do Comentário:</label>
            <textarea asp-for="Conteudo" class="form-control" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>


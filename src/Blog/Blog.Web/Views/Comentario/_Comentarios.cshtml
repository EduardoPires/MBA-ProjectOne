@model IEnumerable<ComentarioModel>

<ul class="list-group">
    @foreach (var comentario in Model)
    {
        <li class="list-group-item">
            <p><strong>@comentario.Nome</strong> - @comentario.DataPublicacao.ToString("dd/MM/yyyy")</p>
            <p>@comentario.Conteudo</p>

            <a asp-action="EditarComentario" asp-controller="Comentario" asp-route-id="@comentario.Id" class="btn btn-secondary btn-sm">
                Editar
            </a>

            <form asp-action="ExcluirComentario" asp-controller="Comentario" asp-route-id="@comentario.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este comentário?');">
                    Excluir
                </button>
            </form>
        </li>
    }
</ul>
